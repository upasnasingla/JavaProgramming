  sb.delete(2,4); //4th index not included
    System.out.println(sb);


  //append i.e join something at end   
  StringBuilder st=new StringBuilder("h");    //append is happening in same StringBuilder so time less
  st.append('e');
  st.append('l');
  st.append('l');
  st.append('o');
  System.out.println(st);
  System.out.println(st.length());


